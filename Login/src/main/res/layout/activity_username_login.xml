<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:inputType="phone"
        android:id="@+id/login_uname_edit_username"
        android:hint="请输入手机号"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/login_username_and_password_edittext"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="277dp" />

    <EditText
        android:id="@+id/login_uname_edit_password"
        android:hint="请输入密码"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/login_username_and_password_edittext"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="344dp" />


    <Button
        android:id="@+id/login_uname_btn_login"
        android:textSize="14sp"
        android:text="登录"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/login_loginbtn_background"
        android:layout_marginTop="430dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/login_uanme_text_tophonelogin"
            android:textSize="16sp"
            android:text="验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="|"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#072BF1"
            android:textSize="16sp"
            android:text="密码登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="580dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:text="还没有账号?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/login_uanme_text_toregister"
            android:textStyle="bold"
            android:textColor="#19E421"
            android:textSize="16sp"
            android:text="立即注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>